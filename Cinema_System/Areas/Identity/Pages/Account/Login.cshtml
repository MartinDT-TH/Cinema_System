@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<style>
    /* Sci-Fi Background */
    body {
        background: radial-gradient(circle at center, #001f3f, #000);
        color: white;
        font-family: 'Orbitron', sans-serif;
       
    }

        /* Animated Stars */
     

    /* Neon Glow Card */
    .card {
        border: none;
        border-radius: 15px;
        background: rgba(0, 0, 0, 0.85);
        box-shadow: 0 0 15px rgba(0, 153, 255, 0.8);
        color: white;
    }


    /* Sci-Fi Buttons */
    .btn-primary {
        background: linear-gradient(45deg, #00d4ff, #007bff);
        color: white;
        border: none;
        box-shadow: 0px 0px 10px #00d4ff;
        transition: 0.3s ease-in-out;
    }

        .btn-primary:hover {
            background: #007bff;
            box-shadow: 0px 0px 20px #00d4ff;
        }

    /* Neon Outline for Inputs */
    .form-control {
        background: rgba(255, 255, 255, 0.1);
        color: white;
    }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.2);
            border: 1px solid #00d4ff;
        }
    /* Links */
  
</style>

<div class="container">
    <div class="row justify-content-center mt-3 pb-4 mb-2">
        <div class="col-lg-5">
            <div class="card">
                <div class="card-body p-5">
                    <h2 class="mb-4 fw-bold ">Log in</h2>

                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" placeholder="password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label asp-for="Input.RememberMe" class="form-check-label">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                            </div>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a>
                        </div>

                        <button id="login-submit" type="submit" class="btn btn-primary w-100 py-2">Log in</button>

                        <div class="text-center mt-3">
                            <p>Not a member? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="fw-bold">Sign up now</a></p>
                            <p>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                            </p>
                        </div>

                        <hr />

                        <div class="text-center mt-3">
                            <h5>Or log in with</h5>
                            <div class="d-flex justify-content-center gap-3 mt-2">
                                @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                                {
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                            <button type="submit" class="btn btn-outline-primary" name="provider" value="@provider.Name">
                                                <i class="bi bi-@(provider.Name.ToLower())"></i> @provider.DisplayName
                                            </button>
                                        </form>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted">No external login providers available</p>
                                }
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
